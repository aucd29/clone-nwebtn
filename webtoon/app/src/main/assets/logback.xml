<configuration>
    <appender name="logcat" class="ch.qos.logback.classic.android.LogcatAppender">
        <tagEncoder>
            <pattern>%class{0}[%thread]</pattern>
        </tagEncoder>

        <encoder>
            <pattern>%msg - %M:%L%n</pattern>
        </encoder>
    </appender>

    <root level="debug">
        <!--
		trace
		debug
		info
		warn
		error
        -->
        <appender-ref ref="logcat"/>
    </root>
</configuration>